HEADERS =
OBJS =
PREFIX = @prefix@
OUTPUT = @PACKAGE_NAME@_tests
CXX = @CXX@
CXXFLAGS = @CXXFLAGS@ -I../src -Wall -std=c++0x
LDFLAGS = @LDFLAGS@
INSTALL = install

.PHONY: all clean check install

all: $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) main.cpp -o $(OUTPUT) $(LDFLAGS)

clean:
	rm -f $(OBJS) $(OUTPUT)

check:
	scan-build -o check make

%.o: %.cpp %.h
	$(CXX) $(CXXFLAGS) -c $< -o $@
